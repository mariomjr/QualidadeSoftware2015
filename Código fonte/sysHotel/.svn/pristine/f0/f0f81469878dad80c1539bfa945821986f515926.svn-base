<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">

	<ui:composition template="/templates/template.xhtml">
		<ui:define name="content">
			<h:body>
				<h:form id="form">
				    <p:dataGrid var="quarto" value="#{quartoBean.listQuartos}" columns="3" layout="grid"
				        rows="12" paginator="true" id="dtQuarto"
				        paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
				        rowsPerPageTemplate="6,12,16">
				 
				        <f:facet name="header">6
				            Quartos
				        </f:facet>
				 
				        <p:panel header="#{quarto.numeroQuarto}" style="text-align:center">
				            <h:panelGrid columns="1" style="width:100%">
				 
				                <h:outputText value="#{quarto.valor}" />
			
				            </h:panelGrid>
				        </p:panel>
				 
				    </p:dataGrid>
				
				</h:form>
			</h:body>
		</ui:define>
	</ui:composition>
</html>